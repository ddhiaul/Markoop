<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    tools:context=".profile.publish.CreateNovelActivity">

    <ImageView
        android:id="@+id/btn_back_create_novel"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/arrow_left" />

    <TextView
        android:id="@+id/btn_create_to_publish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center"
        android:text="Create Novel"
        android:textColor="@color/mainText"
        android:textSize="21sp" />

    <ImageView
        android:id="@+id/img_add_cover"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="99dp"
        android:src="@drawable/add" />

    <TextView
        android:id="@+id/tv_cover_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_add_cover"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:text="Add Cover"
        android:textColor="@color/mainText"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_detail_add_cover"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_cover_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/montserrat_light"
        android:gravity="center"
        android:text="The image size must not exceed 5Mb and the image dimensions must not exceed 800x600px"
        android:textColor="@color/mainText"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_title_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_detail_add_cover"
        android:layout_marginStart="28dp"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Title"
        android:textColor="@color/mainText"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/et_create_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tv_detail_add_cover"
        android:layout_marginStart="107dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/bg_input"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center_vertical"
        android:hint="Laskar pelangi"
        android:paddingStart="12dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_genre_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title_create"
        android:layout_marginStart="28dp"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Genre"
        android:textColor="@color/mainText"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/et_create_genre"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/et_create_title"
        android:layout_marginStart="107dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/bg_input"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center_vertical"
        android:hint="Slice of Life"
        android:paddingStart="12dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_synopsis_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_genre_create"
        android:layout_marginStart="28dp"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Genre"
        android:textColor="@color/mainText"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/et_create_synopsis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_create_genre"
        android:layout_marginStart="107dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/bg_input"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="top"
        android:hint="Novel ini bercerita tentang kehidupan 10 anak dari keluarga miskin yang bersekolah di sebuah sekolah Muhammadiyah di Belitung yang penuh dengan keterbatasan."
        android:lineSpacingExtra="4dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="12dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="42dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:background="@drawable/btn_primary"
        android:textColor="@color/mainBackground"
        android:text="Save"
        android:fontFamily="@font/montserrat_semibold"
        android:textAllCaps="false"
        android:textSize="12sp"/>

</RelativeLayout>