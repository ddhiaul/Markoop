<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    android:orientation="vertical"
    tools:context=".landingPage.SignUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/btn_back_to_signin"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/arrow_left"
            android:layout_marginTop="28dp"
            android:layout_marginStart="26dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="Sign Up"
            android:textColor="@color/mainText"
            android:textSize="24sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/markoop_icon"/>

        <EditText
            android:id="@+id/et_name_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input"
            android:layout_marginHorizontal="68dp"
            android:layout_marginTop="80dp"
            android:padding="12dp"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="12sp"
            android:hint="Name"/>

        <EditText
            android:id="@+id/et_email_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input"
            android:layout_marginHorizontal="68dp"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="12sp"
            android:hint="Email"/>

        <EditText
            android:id="@+id/et_pass_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input"
            android:layout_marginHorizontal="68dp"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="12sp"
            android:hint="Password"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_primary"
            android:layout_marginHorizontal="68dp"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/mainBackground"
            android:text="Sign Up"
            android:textSize="14dp"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/tv_to_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="12sp"
            android:textColor="@color/mainText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="or"
            android:textColor="@color/mainText"
            android:textSize="12sp"/>

        <LinearLayout
            android:id="@+id/btn_reg_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:layout_marginTop="44dp"
            android:layout_marginHorizontal="68dp"
            android:background="@drawable/btn_google">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bggoogle"
                android:paddingVertical="8dp"
                android:paddingHorizontal="14dp">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_google"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up With Google"
                android:gravity="center"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/white"
                android:layout_marginVertical="10dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>